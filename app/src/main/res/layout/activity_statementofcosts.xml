<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textviewPersonOwesYou"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="@string/textPersonOwesYou"
        android:layout_marginTop="10dp"/>

    <ListView
        android:id="@+id/listviewPersonOwesYou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="20dp"/>

    <TextView
        android:id="@+id/textviewYouOwePerson"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/textYouOwePerson" />

    <ListView
        android:id="@+id/listviewYouOwePerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="20dp"/>
</LinearLayout>